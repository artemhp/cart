!!! 5
%html.no-js(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title AKQA Cart
    %link(rel="stylesheet" href="./css/index.css")
    %link(rel="shortcut icon" href="./favicon.ico")
  %body
    %div.container
      %header.header
        %a.logo AKQA
      %section.cartDescription
        %h1.mainTitle Your Basket
        %p.cartInfo Items you have added to your basket are shown below. Adjust the quantities or remove items before continuing your purchase.
      %div.cart
        %form.cartForm#cartForm{:action => "index.php"}

          %div.cartHeader.row
            %div.col-xs-3.col-md-3
              Product
            %div.col-xs-1.col-md-1
              Price
            %div.col-xs-1.col-md-1
              Qty
            %div.col-xs-1.col-md-1
              Cost
          %div.pseudoTable.cartTable.row
            - items.each do |item|
              %div.pseudoTr.row.item{:id => "item-#{item[:ids]}"}
                %div.pseudoTd.cartTitle.col-md-3.col-xs-6
                  %div.trash
                  #{item[:title]}
                %div.pseudoTd.pound.col-md-1.col-xs-3 #{item[:price]}
                %div.pseudoTd.cartCount.col-md-1.col-xs-3
                  %div.wrapQty
                    %input{:type => "number", :value=> "1", :name => "qty", :class => "priceQty"}
                    %div.qtyUp
                    %div.qtyDown
                %div.pseudoTd.pound.col-md-1.col-xs-6.itemCost
          %div.row.cartInfoWrap
            %div.cartTotalInfo.col-xs-3
              %div.subtotal Subtotal
              %div.tax VAT @20%
              %div.total.cartTotalBottom Total Cost
            %div.cartTotalResult.col-xs-3.col-md-3
              %div#subtotal.pound
              %div#tax.pound
              %div#total.pound.cartTotalBottom
          %div.row
            %div.cartBtnWrap
              %input.cartBtn{:type => "submit", :name => "cartBtn", :id => "cartBtn", :value => "Buy Now Â»"}
    %footer.footer
      %div.container
        &copy;
        %strong
          2013 AKQA Ltd.
        Registered in England: 2964394
    %script(src="./js/scripts.min.js")